<?xml version="1.0"?>

<resources>


    <style name="selectDataDialog" parent="android:Theme.Dialog">

        <item name="android:windowFrame">@null</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowBackground">@color/transparent</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:backgroundDimAmount">0.4</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">@style/selectDataDialogAnim</item>

    </style>


    <style name="selectDataDialogAnim" mce_bogus="1" parent="android:Animation">

        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>

        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>

    </style>
    <!-- Base application theme. -->


    <style parent="MyThemeRed" name="AppTheme"/>

    <!-- 网易红为主色调 -->

    <style parent="Theme.AppCompat.Light.NoActionBar" name="MyThemeRed">

    <!--选中状态icon的颜色和字体颜色-->


    <item name="colorPrimary">@color/colorTheme</item>

    <item name="colorPrimaryDark">@color/colorTheme</item>

    <item name="colorAccent">@color/colorTheme</item>

    <item name="android:windowAnimationStyle">@style/default_animation</item>

    <!--正常状态下字体颜色和icon颜色-->


    <!--<item name="android:textColorPrimary">@color/colorTheme</item>-->


</style>

    <!-- 默认Activity跳转动画 -->



    -<style parent="@android:style/Animation.Activity" name="default_animation" mce_bogus="1">

    <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>

    <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>

    <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>

    <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>

</style>

    <!--只有上一页面退出时有动画-->


    <style parent="@android:style/Animation.Activity" name="default_animation_down" mce_bogus="1">

    <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>

    <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>

</style>

    <!--打开图片详情时有动画-->



    -<style parent="@android:style/Animation.Activity" name="default_animation_up" mce_bogus="1">

    <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>

    <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>

</style>

    <!--电影详情页-->

    <style parent="Theme.AppCompat.Light.NoActionBar" name="MyScrollPage">

    <!--选中状态icon的颜色和字体颜色-->


    <item name="colorPrimary">@color/colorTheme</item>

    <item name="colorPrimaryDark">@color/colorTheme</item>

    <item name="colorAccent">@color/colorTheme</item>

    <item name="android:windowAnimationStyle">@style/default_animation_down</item>

</style>

    <!--查看大图页面，全屏显示-->



    <style parent="Theme.AppCompat.Light.NoActionBar" name="ViewBigPicTheme">

    <item name="colorPrimary">@color/colorTheme</item>

    <item name="colorPrimaryDark">@color/colorTheme</item>

    <item name="colorAccent">@color/colorTheme</item>

    <item name="android:windowFullscreen">true</item>

    <item name="android:windowAnimationStyle">@style/default_animation_up</item>

</style>

    <!--titleBar样式-->



    <style parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" name="ToolbarStyle">

    <!--<item name="actionBarItemBackground">@drawable/toolbarItemBackground</item>-->


    <!--<item name="selectableItemBackground">@drawable/toolbarItemBackground</item>-->


    <item name="titleTextAppearance">@style/ToolBar.Title</item>

    <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>

    <item name="android:windowNoTitle">true</item>

    <!--<item name="android:textSize">18sp</item> &lt;!&ndash; 搞掂字体大小&ndash;&gt;-->


</style>

    <!--titlebar 标题-->



    <style parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" name="ToolBar.Title">

    <item name="android:textSize">18.0sp</item>

    <item name="android:textColor">@color/colorWhite</item>

</style>

    <!--titlebar 副标题-->



    <style parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle" name="Toolbar.SubTitle">

    <item name="android:textSize">9.0sp</item>

    <item name="android:textColor">#99ffffff</item>

</style>


    <style parent="Theme.AppCompat.Light.DarkActionBar" name="AppThemeSystem">

    <!-- Customize your theme here. -->


    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/colorAccent</item>

</style>


    <style name="AppThemeSystem.NoActionBar">

    <item name="windowActionBar">false</item>

    <item name="windowNoTitle">true</item>

</style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>


    <style name="common_mProgress_circle">

    <item name="android:indeterminateDuration">900</item>

    <item name="android:indeterminateDrawable">@drawable/progress_cirle</item>

    <item name="android:minWidth">30dp</item>

    <item name="android:minHeight">30dp</item>

    <item name="android:maxWidth">60dp</item>

    <item name="android:maxHeight">60dp</item>

</style>

    <!--水平分隔线-->

    <style name="horizontalLine">

    <item name="android:background">@color/colorLineItem</item>

    <item name="android:layout_height">1px</item>

    <item name="android:layout_width">match_parent</item>

</style>

    <!--用于项目主页-->

    <style parent="@android:style/TextAppearance" name="CollapsingToolbarTitleStyle">

    <item name="android:textSize">18.0sp</item>

    <item name="android:textColor">@android:color/transparent</item>

</style>
    <style parent="@android:style/TextAppearance" name="WebTitle">

    <item name="android:textSize">18sp</item>

    <item name="android:textColor">@color/colorWhite</item>

    <item name="android:ellipsize">marquee</item>

    <item name="android:marqueeRepeatLimit">marquee_forever</item>

    <item name="android:scrollHorizontally">true</item>

    <item name="android:singleLine">true</item>

</style>

</resources>