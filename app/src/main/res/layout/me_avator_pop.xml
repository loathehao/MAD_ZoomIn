<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/me_editor_avatar_takephoto_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_selector_teal_boader"
            android:text="拍照"
            android:textColor="@color/colorTheme1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/me_editor_avatar_album_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector_teal_boader"
            android:text="从相册选择"
            android:textColor="@color/colorTheme1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/me_editor_avatar_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector_teal_boader"
            android:text="取消"
            android:textColor="@color/colorTheme1"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>