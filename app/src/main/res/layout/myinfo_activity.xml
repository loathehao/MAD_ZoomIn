<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghostwhite"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/me_line0"
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="16dp"
                android:background="@color/lightgrey"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/me_detail_icon_src"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_below="@+id/me_line0"
                android:background="@drawable/item_selector_no_border">

                <ImageView
                    android:id="@+id/me_info"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorTheme"
                    android:src="@drawable/my" />
            </RelativeLayout>

            <View
                android:id="@+id/me_line1"
                android:layout_width="match_parent"
                android:layout_height="0.02dp"
                android:layout_below="@+id/me_detail_icon_src"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/lightgrey"
                android:orientation="horizontal" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/top_toolbar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/me_line1"
                android:background="@drawable/item_selector_no_border"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_myfavorite"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/video_normal" />

                    <ImageView
                        android:id="@+id/info_mycollection"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="13dp"
                        android:src="@drawable/movie_normal" />

                    <ImageView
                        android:id="@+id/info_history"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/newspaper_normal" />

                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/top_toolbar"
                android:background="@drawable/item_selector_no_border">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="23dp"
                        android:text="我的喜爱"
                        android:textAlignment="center"
                        android:textColor="@color/colorTheme" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:text="我的收藏"
                        android:textAlignment="center"
                        android:textColor="@color/colorTheme" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="浏览历史"
                        android:textAlignment="center"
                        android:textColor="@color/colorTheme" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/me_line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/info_text"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/lightgrey"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/me_line2"
                android:layout_marginTop="10dp"
                android:text="    电影推荐"
                android:textColor="@color/colorTheme"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/info_recommend1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@drawable/info_recommend" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="黑镜"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="黑色荧幕前后，不存在的自由意志。" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/info_recommend2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@drawable/info_recommend1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="地球最后的夜晚"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="无来也无往：生命是一场莫比乌斯式的还魂梦游。" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>